root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Spaces in js
[{*.js,*.vue,*.json}]
indent_style = space
indent_size = 2

# Spaces in less
[*.less]
indent_style = space
indent_size = 2

# Spaces in css
[*.css]
indent_style = space
indent_size = 2

# Spaces in html
[*.html]
indent_style = space
indent_size = 2

# Spaces in xml
[*.xml]
indent_style = space
indent_size = 2
